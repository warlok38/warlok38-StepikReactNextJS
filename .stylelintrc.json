{
	"extends": [
		"stylelint-config-standard",
		"stylelint-order-config-standard"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"indentation": [
			"tab"
		],
		"color-hex-case": "upper",
		"no-empty-source": null,
    	"declaration-empty-line-before": null,
    	"no-missing-end-of-source-newline": null
	}
}